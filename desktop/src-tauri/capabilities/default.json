{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:event:default",
    "opener:default",
    "global-shortcut:default",
    "updater:default",
    "clerk:default",
    "store:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*.convex.cloud"
        },
        {
          "url": "https://*.convex.site"
        },
        {
          "url": "https://*.clerk.accounts.dev"
        },
        {
          "url": "https://*.clerk.dev"
        },
        {
          "url": "https://lilapu.com"
        },
        {
          "url": "https://www.lilapu.com"
        },
        {
          "url": "https://*.proxy.runpod.net"
        }
      ]
    }
  ]
}